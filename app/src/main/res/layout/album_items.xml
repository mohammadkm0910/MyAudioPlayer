<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCoverItem"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/grey_300"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_albums"
        app:shapeAppearanceOverlay="@style/Theme.MyMediaPlayer.ImageCurvedRounded"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:background="@color/light_blue_A400">
        <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/tvTrackCountItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="14sp"
            android:textColor="@color/grey_50"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>