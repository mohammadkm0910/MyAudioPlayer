<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/grey_300"
    app:cardCornerRadius="8dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/grey_300"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_artists"
        app:tint="@color/purple_500"
        android:contentDescription="@null"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical"
        android:background="@color/deep_purple_A200">
        <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvTrackCountItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textSize="16sp"
            android:textColor="@color/blue_grey_50"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>