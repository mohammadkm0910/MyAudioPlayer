<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_vertical_list">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemCoverSong"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey_300"
        app:srcCompat="@drawable/ic_songs"
        app:shapeAppearanceOverlay="@style/Theme.MyMediaPlayer.ImageRounded"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/itemTitleSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/itemArtistSong"
        app:layout_constraintStart_toEndOf="@+id/itemCoverSong"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textColor="@color/grey_900"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/itemArtistSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemTitleSong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemCoverSong"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="?android:attr/textAppearanceListItemSecondary"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/grey_900"
        android:maxLines="1"
        android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>